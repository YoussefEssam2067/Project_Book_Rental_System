<%- include('../partials/headerProfile') %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title text-center mb-4">Edit Profile</h3>
          <form
            action="/profile/edit-info"
            method="POST"
            id="edit-profile-form"
            enctype="multipart/form-data"
          >

          <!-- Bio input -->
          <div class="mb-3">
            <label for="bio" class="form-label">Bio</label>
            <textarea
              name="bio"
              class="form-control"
              rows="3"
              id="bio"
            ></textarea>
          </div>

            <!-- Name input -->
            <div class="mb-3">
              <label for="name" class="form-label">Full Name</label>
              <input
                type="text"
                class="form-control"
                name="name"
                id="name"
                value="<%= user.name %>"
              />

              <% if (errors?.name) { %>
              <div class="text-danger"><%= errors.name %></div>
              <% } %>
            </div>

            <!-- Email input -->
            <div class="mb-3">
              <label for="email" class="form-label">Email address</label>
              <input
                type="email"
                class="form-control"
                name="email"
                id="email"
                value="<%= user.email %>"
              />

              <% if (errors?.email) { %>
              <div class="text-danger"><%= errors.email %></div>
              <% } %>
            </div>

            <!-- Password input -->
            <div class="mb-3 position-relative">
              <label for="password" class="form-label">Password</label>
              <div class="position-relative">
                <input
                  type="password"
                  class="form-control"
                  name="password"
                  id="password"
                  placeholder="Create a password"
                />
                <!-- Eye Icon to toggle visibility -->
                <i
                  class="fa fa-eye position-absolute top-50 end-0 me-3"
                  id="togglePassword"
                  style="cursor: pointer; transform: translateY(-50%)"
                ></i>
              </div>
              <% if (errors?.password) { %>
              <div class="text-danger"><%= errors.password %></div>
              <% } %>
            </div>

            <!-- Confirm Password input -->
            <div class="mb-3 position-relative">
              <label for="confirmPassword" class="form-label"
                >Confirm Password</label
              >
              <div class="position-relative">
                <input
                  type="password"
                  class="form-control"
                  name="confirmPassword"
                  id="confirmPassword"
                  placeholder="Confirm your password"
                />
                <!-- Eye Icon to toggle visibility -->
                <i
                  class="fa fa-eye position-absolute top-50 end-0 me-3"
                  id="toggleConfirmPassword"
                  style="cursor: pointer; transform: translateY(-50%)"
                ></i>
              </div>
              <% if (errors?.confirmPassword) { %>
              <div class="text-danger"><%= errors.confirmPassword %></div>
              <% } %>
            </div>

            <!-- Address input -->
            <div class="mb-3">
              <label for="address" class="form-label">Address</label>
              <input
                type="text"
                class="form-control"
                name="address"
                id="address"
                value="<%= user.address %>"
              />

              <% if (errors?.address) { %>
              <div class="text-danger"><%= errors.address %></div>
              <% } %>
            </div>

            <!-- Phone input -->
            <div class="mb-3">
              <label for="phone" class="form-label">Phone</label>
              <input
                type="text"
                class="form-control"
                name="phone"
                id="phone"
                value="<%= user.phone %>"
              />

              <% if (errors?.phone) { %>
              <div class="text-danger"><%= errors.phone %></div>
              <% } %>
            </div>

            <!-- Age input -->
            <div class="mb-3">
              <label for="age" class="form-label">Age</label>
              <input
                type="number"
                class="form-control"
                name="age"
                id="age"
                value="<%= user.age %>"
              />

              <% if (errors?.age) { %>
              <div class="text-danger"><%= errors.age %></div>
              <% } %>
            </div>

            <!-- Image input -->
            <div class="mb-3">
              <label for="avatar" class="form-label">Select Avatar</label>
              <input
                type="file"
                class="form-control"
                name="avatar"
                id="avatar"
              />

            <!-- Submit Button -->
            <div class="d-grid mt-3">
              <button type="submit" class="btn btn-primary">
                Update Profile
              </button>
            </div>
          </form>

          <!-- Option to go back to profile -->
          <div class="mt-3 text-center">
            <a href="/profile">Back to Profile</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Password visibility toggle logic
  const togglePassword = document.querySelector("#togglePassword");
  const password = document.querySelector("#password");
  const toggleConfirmPassword = document.querySelector(
    "#toggleConfirmPassword"
  );
  const confirmPassword = document.querySelector("#confirmPassword");

  togglePassword.addEventListener("click", function (e) {
    const type =
      password.getAttribute("type") === "password" ? "text" : "password";
    password.setAttribute("type", type);
    this.classList.toggle("fa-eye-slash");
  });

  toggleConfirmPassword.addEventListener("click", function (e) {
    const type =
      confirmPassword.getAttribute("type") === "password" ? "text" : "password";
    confirmPassword.setAttribute("type", type);
    this.classList.toggle("fa-eye-slash");
  });
</script>

<%- include('../partials/footer') %>
