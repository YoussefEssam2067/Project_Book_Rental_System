<%- include('../partials/header') %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title text-center mb-4">Sign Up</h3>
          <form action="/register" method="POST" id="register-form" enctype="multipart/form-data">
            <!-- Name input -->
            <div class="mb-3">
              <label for="name" class="form-label">Full Name</label>
              <input
                type="text"
                class="form-control"
                name="name"
                id="name"
                value="<%= formData?.name || '' %>"
                placeholder="Enter your full name"
              />
              <% if (errors?.name) { %>
              <div class="text-danger"><%= errors.name %></div>
              <% } %>
            </div>

            <!-- Email input -->
            <div class="mb-3">
              <label for="email" class="form-label">Email address</label>
              <input
                type="email"
                class="form-control"
                name="email"
                id="email"
                value="<%= formData?.email || '' %>"
                placeholder="Enter your email"
              />
              <% if (errors?.email) { %>
              <div class="text-danger"><%= errors.email %></div>
              <% } %>
            </div>

            <!-- Password input -->
            <div class="mb-3 position-relative">
              <label for="password" class="form-label">Password</label>
              <div class="position-relative">
                <input
                  type="password"
                  class="form-control"
                  name="password"
                  id="password"
                  placeholder="Create a password"
                />
                <i
                  class="fa fa-eye position-absolute top-50 end-0 me-3"
                  id="togglePassword"
                  style="cursor: pointer; transform: translateY(-50%)"
                ></i>
              </div>
              <% if (errors?.password) { %>
              <div class="text-danger"><%= errors.password %></div>
              <% } %>
            </div>

            <!-- Confirm Password input -->
            <div class="mb-3 position-relative">
              <label for="confirmPassword" class="form-label"
                >Confirm Password</label
              >
              <div class="position-relative">
                <input
                  type="password"
                  class="form-control"
                  name="confirmPassword"
                  id="confirmPassword"
                  placeholder="Confirm your password"
                />
                <i
                  class="fa fa-eye position-absolute top-50 end-0 me-3"
                  id="toggleConfirmPassword"
                  style="cursor: pointer; transform: translateY(-50%)"
                ></i>
              </div>
              <% if (errors?.confirmPassword) { %>
              <div class="text-danger"><%= errors.confirmPassword %></div>
              <% } %>
            </div>

            <!-- Address input -->
            <div class="mb-3">
              <label for="address" class="form-label">Address</label>
              <input
                type="text"
                class="form-control"
                name="address"
                id="address"
                value="<%= formData?.address || '' %>"
                placeholder="Enter your address"
              />
            </div>

            <!-- Phone input -->
            <div class="mb-3">
              <label for="phone" class="form-label">Phone</label>
              <input
                type="text"
                class="form-control"
                name="phone"
                id="phone"
                value="<%= formData?.phone || '' %>"
                placeholder="Enter your phone"
              />
              <% if (errors?.phone) { %>
              <div class="text-danger"><%= errors.phone %></div>
              <% } %>
            </div>

            <!-- Age input -->
            <div class="mb-3">
              <label for="age" class="form-label">Age</label>
              <input
                type="number"
                class="form-control"
                name="age"
                id="age"
                value="<%= formData?.age || '' %>"
                placeholder="Enter your Age"
              />
              <% if (errors?.age) { %>
              <div class="text-danger"><%= errors.age %></div>
              <% } %>
            </div>

            <!-- Image input -->
            <div class="mb-3">
              <label for="avatar" class="form-label">Select Avatar</label>
              <input
                type="file"
                class="form-control"
                name="avatar"
                id="avatar"
              />

            <!-- Submit Button -->
            <div class="d-grid mt-3">
              <button type="submit" class="btn btn-primary">Sign Up</button>
            </div>
          </form>

          <!-- Already have an account -->
          <div class="mt-3 text-center">
            <p>Already have an account? <a href="/login">Log In</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Password visibility toggle logic
  const togglePassword = document.querySelector("#togglePassword");
  const password = document.querySelector("#password");
  const toggleConfirmPassword = document.querySelector(
    "#toggleConfirmPassword"
  );
  const confirmPassword = document.querySelector("#confirmPassword");

  togglePassword.addEventListener("click", function (e) {
    const type =
      password.getAttribute("type") === "password" ? "text" : "password";
    password.setAttribute("type", type);
    this.classList.toggle("fa-eye-slash");
  });

  toggleConfirmPassword.addEventListener("click", function (e) {
    const type =
      confirmPassword.getAttribute("type") === "password" ? "text" : "password";
    confirmPassword.setAttribute("type", type);
    this.classList.toggle("fa-eye-slash");
  });
</script>
<%- include('../partials/footer') %>
